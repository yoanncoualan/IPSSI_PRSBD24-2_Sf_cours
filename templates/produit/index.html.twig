{% extends 'base.html.twig' %}

{% block title %}Hello ProduitController!{% endblock %}

{% block body %}
    <h1>Produits</h1>

    <table class="table">
        <thead>
            <tr>
                <td>Nom</td>
                <td>Description</td>
                <td>Prix</td>
                <td>Quantité</td>
                <td>Image</td>
                <td>Catégorie</td>
                <td>Action</td>
            </tr>
        </thead>
        <tbody>
            {% for p in produits %}
                <tr>
                    <td>{{ p.nom }}</td>
                    <td>{{ p.description }}</td>
                    <td>{{ p.prix }}€</td>
                    <td>{{ p.quantite }}</td>
                    <td>
                        {% if p.image is not null %}
                            <img src="{{ asset('uploads/' ~ p.image) }}" style="width: 100px;">
                        {% endif %}
                    </td>
                    <td>{{ p.categorie.nom }}</td>
                    <td>
                        <a href="{{path('produit', {'id':p.id})}}" class="btn btn-primary">Afficher</a>
                        <a href="{{path('produit_delete', {'id':p.id})}}" class="btn btn-danger">Supprimer</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">Il n'y a aucun produit</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <h2>Ajouter un produit</h2>
    {{ form(ajout) }}
{% endblock %}
